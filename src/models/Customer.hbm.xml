<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class dynamic-insert="false" dynamic-update="false" mutable="true" name="models.Customer" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
        <id name="id" type="long" unsaved-value="null">
            <generator class="identity"/>
        </id> 
        <property name="firstName" not-null="true" type="string"/>
        <property name="lastName" not-null="true" type="string"/>        
        <property name="street" not-null="true" type="string"/>
        <property name="city" not-null="true" type="string"/> 
        <property name="country" not-null="true" type="string"/>
        <property name="postcode" not-null="true" type="string"/>
        <property name="email" not-null="true" type="string"/>
        <property name="phone" not-null="true" type="string"/>
    </class>
</hibernate-mapping>
