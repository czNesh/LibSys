<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class dynamic-insert="false" dynamic-update="false" mutable="true" name="models.entity.Borrow" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
        <id name="id" type="long" unsaved-value="null">
            <generator class="identity"/>
        </id>  
        <one-to-one name="librarian" class="models.entity.SystemUser" cascade="save-update"/>
        <one-to-one name="customer" class="models.entity.Customer" cascade="save-update"/>
        <one-to-one name="item" class="models.entity.Book" cascade="save-update"/>
        <property name="fromDate" not-null="true" type="timestamp"/>
        <property name="toDate" not-null="true" type="timestamp"/>
        <property name="returned" not-null="true" type="boolean"/>
        <property name="notes" not-null="true" type="string"/>
    </class>
</hibernate-mapping>